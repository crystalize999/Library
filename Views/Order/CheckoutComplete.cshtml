@using Library.Services
@model Library.Models.Order;
@inject CartService _cartService;

<h1>Thank you for order!</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Book</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                var itemTotal = item.Book.Price * item.Quantity;
                <tr>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.Book.ImageUrl" style="height: 4em" /></a>
                    </td>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.Book.Title</a>
                    </td>
                    <td>
                        @itemTotal.ToString("C2", new System.Globalization.CultureInfo("uk-UA"));
                    </td>
                    <td>
                        @item.Quantity
                    <td>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
        <td></td>
        <td class="text-right">
            <strong></strong>
        </td>
        <td>
        <strong></strong>
        </td>
        <td></td>
        </tfoot>
    </table>

